<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그 찍어보기"/>

    <Button
        android:id="@+id/btnToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="토스트 띄우기"/>
    <Button
        android:id="@+id/btnVariable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="변수 문법 테스트"/>
    <Button
        android:id="@+id/btnCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="조건문 문법 테스트"/>
    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반복문 테스트"/>


    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아무말이나 입력"/>

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위 메시지 복사"/>

    <TextView
        android:id="@+id/txtMessage"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="복사한 내용이 여기에 표시됩니다."
        android:textSize="17sp"/>
</LinearLayout>